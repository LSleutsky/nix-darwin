{
  home.file.".vimrc" = {
    enable = true;
    text = ''
      set encoding=utf-8
      set history=200
      set mouse=a

      set number
      set relativenumber

      set expandtab
      set smarttab
      set tabstop=2
      set softtabstop=2
      set shiftwidth=2
      set textwidth=100

      set autoindent
      set smartindent
      set copyindent
      set preserveindent
      set wrap
      set ruler

      set ignorecase
      set smartcase
      set spell

      set hlsearch
      set incsearch
      set showmatch
      set wildmenu

      set laststatus=2
      set title

      syntax enable
    '';
  };
}
